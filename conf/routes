# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                       controllers.WSController.index
GET         /socket                 controllers.WSController.socket
POST        /send                   controllers.WSController.send(s: String)
POST        /question_action        controllers.WSController.questionAction
POST        /pick_question          controllers.WSController.pickQuestion
POST        /set_question           controllers.WSController.setQuestion(s: String)
POST        /pick_variant           controllers.WSController.pickVariant

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file           controllers.Assets.at(path="/public", file)

    